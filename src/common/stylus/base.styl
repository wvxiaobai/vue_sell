body, html
  line-height 1
  font-weight 200
  font-family 'PingFang SC','STHeiti-Light','Helvetica-Light',Arial,sans-serif

@media (-webkit-min-device-pixel-ratio: 1.5),(min--moz-device-pixel-ratio: 1.5)
  .boder-1px
    &::after
      -webkit-transform: scaleY(0.7)
      transform scaleY(0.7)

@media (-webkit-min-device-pixel-ratio: 2),(min--moz-device-pixel-ratio: 2)
  .boder-1px
    &::after
      -webkit-transform: scaleY(0.5)
      transform scaleY(0.5)